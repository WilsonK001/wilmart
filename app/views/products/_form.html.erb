<div class="form-signin text-center mx-auto mt-4">
   <%= form_with(model: product) do |form| %>
   <% if product.errors.any? %>
      <div id="error_explanation">
         <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

         <ul>
         <% product.errors.each do |error| %>
            <li class="text-warning"><%= error.full_message %></li>
         <% end %>
         </ul>
      </div>
   <% end %>

   <%= form.hidden_field :user_id, id: :product_user_id, class:"form-control", value:current_user.id, type: :hidden %>

   <div class="form-floating">
      <%= form.text_field :name, placeholder: "", class: "form-control" %>
      <%= form.label :name %>
   </div>

   <div class="form-floating">
      <%= form.number_field :price, placeholder: "", class: "form-control" %>
      <%= form.label :price %>
   </div>

   <div class="form-floating">
      <%= form.file_field :image, placeholder: "", class: "form-control" %>
      <%= form.label :image %>
   </div>

   <div class="form-floating">
      <%= form.text_field :category, placeholder: "", class: "form-control" %>
      <%= form.label :category %>
   </div>

   <div class="form-floating">
      <%= form.number_field :rating, placeholder: "", class: "form-control" %>
      <%= form.label :rating %>
   </div>

   <div class="form-floating">
      <%= form.text_field :description, placeholder: "", class: "form-control" %>
      <%= form.label :description %>
   </div>

   <div class="actions my-4">
      <%= form.submit %>
   </div>
   <% end %>
</div>