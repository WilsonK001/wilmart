<div class="d-flex justify-content-between align-items-center mb-4">
   <h2>Products</h2>
   <%= link_to 'New Product', new_product_path, class: "btn btn-outline-primary btn-sm px-3" %>
</div>

<div class='row'>
<% @products.each do |product| %>
   <div class="my-4 col-md-3">
   <div class='custom-card bg-white'>
      <%  if product.image.present? %>
         <%= link_to product_path(product) do %>
            <%= image_tag product.image, class: "custom-card-image" %>
         <% end %>
      <% end %>

      <div class="custom-card-body">
         <h6 class="mb-2  fw-bold"><%= product.name %></h6>
         <p class="card-title text-secondary mb-1">Category: <%= product.category %></p>
         <p class="card-title ext-primary fw-bold">Price: $<%= product.price_to_show %></p>
         <div class="d-flex justify-content-between align-items-center">
            <p class="card-text  mb-0"><%= product.rating %></p>
            
            <div class="d-flex justify-content-end product-links">
               <%= link_to 'Show', product, class: "btn btn-link text-secondary px-2" %>
               <%= link_to 'Edit', edit_product_path(product), class: "btn btn-link text-secondary px-2" %>
               <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn text-secondary btn-link px-2" %>
            </div>
         </div>
      </div>

      
   </div>
   </div>
<% end %>
</div>