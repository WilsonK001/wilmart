<div class="form-signin text-center mx-auto mt-4">
   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2 class="h3 mb-3 fw-normal">Log in</h2>

      <div class="form-floating">
         <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "", class: "form-control" %>
         <%= f.label :email %>
      </div>

      <div class="form-floating">
         <%= f.password_field :password, autocomplete: "current-password", placeholder: "", class: "form-control" %>
         <%= f.label :password %>
      </div>

      <% if devise_mapping.rememberable? %>
         <div class="form-floating checkbox my-3">
               <%= f.check_box :remember_me %>
               Remember Me
         </div>
      <% end %>

      <div class="actions">
         <%= f.submit "Log in", class: "my-4 w-100 btn btn-lg btn-primary" %>
      </div>

      <%= render "devise/shared/links"%>
   <% end %>
</div>